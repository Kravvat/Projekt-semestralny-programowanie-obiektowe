<Window x:Class="WyposazenieDlaSilowni.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WyposazenieDlaSilowni"
        mc:Ignorable="d"
        Title="Panel Logowania" Height="330" Width="360" FontSize="14" Background="DarkCyan" WindowStartupLocation="CenterScreen" Icon="gorilla.ico">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="ZALOGUJ SIE" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Nazwa Uzytkownika" Foreground="White"/>
            <TextBox Name="NazwaUzytkownika_Box" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Haslo" Foreground="White"/>
            <PasswordBox Name="Haslo_PasswordBox" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Name="Zaloguj_Button" Click="Zaloguj_Button_Click" Content="Loguj" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
